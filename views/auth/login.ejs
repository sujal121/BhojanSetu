<div class="m-0 pt-5 w-100 bg-img-2">
	<form action="/auth/login" method="POST" class=" w-50 bg-white p-5 m-auto form-container" style="min-width: 250px; max-width: 600px;">
		<h3 class="text-center title font-color mb-3">User Login</h3>
		<div class="mb-3">
			<label for="email" class="form-label form-label1">Email address</label>
			<input type="email" name="email" class="form-control form-control1" id="email" placeholder="Enter email.." required autofocus>
		</div>

		<div class="mb-4">
			<label for="password" class="form-label form-label1">Password</label>
			<input type="password" name="password" class="form-control form-control1" id="password" placeholder="Enter password.." required>
		</div>
		
		<div class="flex justify-center">
			<button type="submit" class="btn btn2 d-block m-auto mt-4">Submit</button>
		</div>
		
		<div class="mt-3 alredy text-center">
			<span>Don't have an account?</span>
			<a href="/auth/signup">Signup here</a>
		</div>
		
	</form>
</div>