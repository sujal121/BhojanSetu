<div class="m-0 py-4 bg-img-1 ">
	<form action="/auth/signup" method="POST" class="w-50 bg-white p-5 m-auto form-container" style="min-width: 250px;">
		<h3 class="text-center title font-color mb-3">User Signup</h3>

		<% if(typeof errors != 'undefined') { %>
			<% errors.forEach(function(error) { %>
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= error.msg %>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% }); %>
		<% } %>
		
		<div class="mb-3">
			<label for="first-name" class="form-label form-label1">First name</label>
			<input type="text" name="firstName" class="form-control form-control1" id="first-name" placeholder="Enter first name.." value="<%= typeof firstName != 'undefined' ? firstName : '' %>" required autofocus>
		</div>
		
		<div class="mb-3">
			<label for="last-name" class="form-label form-label1">Last name</label>
			<input type="text" name="lastName" class="form-control form-control1" id="last-name" placeholder="Enter last name.." value="<%= typeof lastName != 'undefined' ? lastName : '' %>" required>
		</div>
		
		<div class="mb-3">
			<label for="email" class="form-label form-label1">Email address</label>
			<input type="email" name="email" class="form-control form-control1" id="email" placeholder="Enter email.." value="<%= typeof email != 'undefined' ? email : '' %>" required>
			<div class="form-text">We'll never share your email with anyone else.</div>
		</div>
		
		<div class="mb-3">
			<label for="password1" class="form-label form-label1">Password</label>
			<input type="password" name="password1" class="form-control form-control1" id="password1" placeholder="Enter password.." value="<%= typeof password1 != 'undefined' ? password1 : '' %>" required>
		</div>

		<div class="mb-3">
			<label for="password2" class="form-label form-label1">Confirm Password</label>
			<input type="password" name="password2" class="form-control form-control1" id="password2" placeholder="Re-enter password.." value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
		</div>
		
		<div class="mb-3">
			<label for="role" class="form-label form-label1">Signup as</label>
			<select class="form-select form-control1" name="role" id="role">
				<option value="donor">Donor</option>
				<option value="agent">Ngo</option>
				<!-- <option value="admin">admin</option> -->
			</select>
		</div>
		
		<button type="submit" class="btn btn2 d-block m-auto mt-4">Submit</button>
		
		
		<div class="mt-3 alredy text-center">
			<span>Already have an account?</span>
			<a href="/auth/login">Login here</a>
		</div>
		
	</form>
</div>